# Archivo de ejemplo para desarrollo - Copiar como .env
VITE_APP_ENVIRONMENT=development
VITE_API_BASE_URL=http://localhost:3000

# Roles del sistema
VITE_SUPERADMIN_ROLE={"id":1,"nombre":"SuperAdmin"}
VITE_ADMIN_ROLE={"id":2,"nombre":"Administrador"}
VITE_SUPERIOR_ROLE={"id":3,"nombre":"Superior"}
VITE_ELEMENTO_ROLE={"id":4,"nombre":"Elemento"}

# Configuración de logging
VITE_LOG_LEVEL=1
VITE_LOG_CONSOLE=true
VITE_LOG_STORAGE=true
VITE_LOG_MAX_ENTRIES=1000

# Configuración HTTP
VITE_HTTP_TIMEOUT=30000
VITE_HTTP_RETRIES=3
VITE_HTTP_RETRY_DELAY=1000

# Configuración de autenticación
VITE_AUTH_HEADER_NAME=Authorization
VITE_AUTH_HEADER_PREFIX=Bearer
VITE_AUTH_TOKEN_KEY=auth_token

# Configuración adicional
VITE_DEBUG_MODE=true
VITE_APP_VERSION=1.0.0
VITE_APP_NAME=IPH Frontend

# ===================================================
# CONFIGURACIÓN DE ENCRIPTACIÓN (NUEVO)
# ===================================================

# Passphrase principal para encriptación de datos sensibles
# Recomendación: Usar una frase segura de al menos 32 caracteres
# IMPORTANTE: Cambiar en producción por una clave única y segura
VITE_ENCRYPT_PASSPHRASE=iph-secure-encryption-passphrase-change-in-production-2024

# Variable alternativa para compatibilidad (si VITE_ENCRYPT_PASSPHRASE no está definida)  
# VITE_ENCRYPTION_KEY=alternative-encryption-key-for-compatibility

# Configuración adicional de encriptación (opcional)
# Formato JSON con configuraciones específicas
# VITE_ENCRYPT_CONFIG={"hashIterations":100000,"saltLength":32,"enableLogging":false}

# ---------------------------------------------------
# NOTAS DE SEGURIDAD PARA ENCRIPTACIÓN
# ---------------------------------------------------
# 1. NUNCA commitear archivos .env con claves reales al repositorio
# 2. En producción, usar claves diferentes y más complejas  
# 3. La passphrase debe ser única por ambiente (dev/staging/prod)
# 4. Considerar rotación periódica de claves en producción
# 5. Mantener backup seguro de las claves utilizadas
#
# Ejemplos por ambiente:
# Development: "dev-iph-encrypt-key-2024-not-secure"
# Staging: "staging-iph-secure-key-2024-intermediate-security"  
# Production: "prod-iph-ultra-secure-passphrase-2024-change-this-unique-key-xyz789"
